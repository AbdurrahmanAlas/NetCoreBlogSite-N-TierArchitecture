@using EntityLayer.Concrete
@model List<Message2>
@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}



<h1>Gelen Kutusuı</h1>
<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Konu</th>
        <th>Gönderen </th>
        <th>Tarih</th>
        <th>Mesajı Aç</th>
        <th>Sil</th>
        <th>Güncelle</th>



    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MessageID</td>
            <td>@item.Subject</td>
            <td>@item.SenderUser.WriterName</td>
            <td>
                @(((DateTime)
                item.MessageDate).ToString("dd-MMM-yyyy"))
            </td>
           
           
            <td><a href="/Message/MessageDetayları/@item.MessageID" class="btn btn-warning">Mesajı Aç</a> </td>



        </tr>
    }



</table>
<a href="/Blog/BlogAdd" class="btn btn-primary">Yeni Mesaj Oluştur</a>


